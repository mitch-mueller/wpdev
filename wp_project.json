{
    "theme": {
        "name": "wpdev",
        "URI": "http://wordpress.mj-mueller.de",
        "author": "Michael MÃ¼ller",
        "authorURI": "https://mj-mueller.de",
        "description": "Bla Bla Bla",
        "version": "0.1.0",
        "license": "MIT",
        "licenseURI": "./LICENSE",
        "tags": [
            "white",
            "grid"
        ],
        "textDomain": "wpdev"
    },
    "build": {
        "proxy": "http://wordpress.mj-mueller.de",
        "assets": {
            "watch": "./src/assets/",
            "src": "./src/assets/**/*",
            "dest": "./build/assets/"
        },
        "style": {
            "watch": "./src/scss/",
            "src": "./src/scss/style.scss",
            "dest": "./build/"
        },
        "vendorJS": {
            "watch": "./src/js/vendor/",
            "src": "./src/js/vendor/**/*.js",
            "dest": "./build/"
        },
        "customJS": {
            "watch": "./src/js/custom/",
            "src": "./src/js/custom/**/*.js",
            "dest": "./build/"
        },
        "views": {
            "watch": "./src/views/",
            "src": "./src/views/**/*.php",
            "dest": "./build/"
        },
        "zip": "./build/",
        "ssh": {
            "src": "./build/",
            "path": "/var/www/wordpress",
            "authFile": "./sshpass.json"
        }
    }
}